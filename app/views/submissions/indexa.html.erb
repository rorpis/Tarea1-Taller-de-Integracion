<table>
  <tbody>
    <% @submissions.each do |submission| %>
      <tr class="post">
        <td>
          <%= link_to like_submission_path(submission), method: :put do %>
            <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
          <% end %>

          <%= link_to submission.title, submission, class: "title" %>
          <br>
          <%= submission.lead %>
          <br>
          <%= submission.body %>
        </td>
        <tr class="post">
          <td> <p><%= submission.get_upvotes.size %> likes, by <%= submission.user.email %> <%= time_ago_in_words(submission.created_at) %> ago | <%= link_to "#{submission.comments.count} comments", submission %> </p></td>
        </tr>
        <td>
          <% if current_user.admin == true %>
            <%= link_to 'delete', submission, method: :delete, data: { confirm: 'are you sure?'} %>
            <%= link_to 'edit', submission, method: :edit, data: { confirm: 'are you sure?'} %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
